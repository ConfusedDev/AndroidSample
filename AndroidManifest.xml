<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zybooks.bradleyprieskornschedulerapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BradleyPrieskornSchedulerApp">
        <receiver
            android:name=".MyReceiver"
            android:enabled="true"
            android:exported="true"
            />
        <activity android:name=".controllers.AssessmentDetailActivity" />
        <activity android:name=".controllers.TermAddActivity" />
        <activity android:name=".controllers.AssessmentActivity" />
        <activity android:name=".controllers.AssessmentAddActivity" />
        <activity android:name=".controllers.CourseActivity" />
        <activity android:name=".controllers.CourseAddActivity" />
        <activity android:name=".controllers.CourseEditActivity" />
        <activity android:name=".controllers.TermActivity" />
        <activity android:name=".controllers.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>